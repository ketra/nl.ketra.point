          "nl": "er is een alarm"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ],
        "tokens": [
          {
            "name": "Alarm",
            "type": "string",
            "title": {
              "en": "Type of alarm",
              "nl": "Type alarm"
            },
            "example": "Alarm_heard"
          }
        ]
      },
      {
