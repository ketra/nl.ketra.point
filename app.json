{
  "id": "com.ketra.point",
  "version": "0.1.0",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Minut point"
  },
  "description": {
    "en": "Adds support for Minut Point devices"
  },
  "category": [
    "security"
  ],
  "capabilities": {
    "TempAlarm": {
      "type": "boolean",
      "title": {
        "en": "Temperature Alarm"
      },
      "getable": true,
      "setable": true
    },
    "HumAlarm": {
      "type": "boolean",
      "title": {
        "en": "humidity Alarm"
      },
      "getable": true,
      "setable": true
    },
    "LoudNoise": {
      "type": "boolean",
      "title": {
        "en": "Loud noise"
      },
      "getable": true,
      "setable": true
    }
  },
  "flow": {
    "actions": [
      {
        "id": "set_alarm_on",
        "title": {
          "en": "Alarm ON",
          "nl": "Alarm Aan"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=PointHome"
          }
        ]
      },
      {
        "id": "set_alarm_off",
        "title": {
          "en": "Alarm Off",
          "nl": "Alarm uit"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=PointHome"
          }
        ]
      }
    ],
    "triggers": [
      {
        "id": "short_button_press",
        "title": {
          "en": "Button was pressed",
          "nl": "De knop was ingedrukt."
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ]
      },
      {
        "id": "temperature_high",
        "title": {
          "en": "high temperature",
          "nl": "hoge temperatuur"
        },
        "tokens": [
          {
            "name": "temperature",
            "type": "number",
            "title": {
              "en": "Temp",
              "nl": "Temp"
            },
            "example": 20.1
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ]
      },
      {
        "id": "temperature_low",
        "title": {
          "en": "Low temperature",
          "nl": "Lage temperatuur"
        },
        "tokens": [
          {
            "name": "temperature",
            "type": "number",
            "title": {
              "en": "Temp",
              "nl": "Temp"
            },
            "example": 20.1
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ]
      },
      {
        "id": "temperature_normal",
        "title": {
          "en": "Temperature back to normal",
          "nl": "Temperatuur terug naar normaal"
        },
        "tokens": [
          {
            "name": "temperature",
            "type": "number",
            "title": {
              "en": "Temp",
              "nl": "Temp"
            },
            "example": 20.1
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ]
      },
      {
        "id": "humidity_high",
        "title": {
          "en": "High humidity",
          "nl": "Hoge luchtvochtigheid"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ],
        "tokens": [
          {
            "name": "Humidity",
            "type": "number",
            "title": {
              "en": "Humidity",
              "nl": "Luchtvochtigheid"
            },
            "example": 1057.5
          }
        ]
      },
      {
        "id": "humidity_low",
        "title": {
          "en": "Low humidity",
          "nl": "Lage luchtvochtigheid"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ],
        "tokens": [
          {
            "name": "Humidity",
            "type": "number",
            "title": {
              "en": "Humidity",
              "nl": "Luchtvochtigheid"
            },
            "example": 1057.5
          }
        ]
      },
      {
        "id": "humidity_normal",
        "title": {
          "en": "Humidity back to normal",
          "nl": "Luchtvochtigheid terug naar normaal"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ],
        "tokens": [
          {
            "name": "Humidity",
            "type": "number",
            "title": {
              "en": "Humidity",
              "nl": "Luchtvochtigheid"
            },
            "example": 1057.5
          }
        ]
      },
      {
        "id": "avg_sound_high",
        "title": {
          "en": "Loud noise heard",
          "nl": "Hard geluid gehoord"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ],
        "tokens": [
          {
            "name": "Sound",
            "type": "number",
            "title": {
              "en": "Sound (dB)",
              "nl": "Geluid (dB)"
            },
            "example": 60.5
          }
        ]
      },
      {
        "id": "avg_sound_normal",
        "title": {
          "en": "Sound back to normal",
          "nl": "Geluid terug naar normaal"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ],
        "tokens": [
          {
            "name": "Sound",
            "type": "number",
            "title": {
              "en": "Sound (dB)",
              "nl": "Geluid (dB)"
            },
            "example": 60.5
          }
        ]
      },
      {
        "id": "device_offline",
        "title": {
          "en": "Device offline",
          "nl": "Apparaat offline"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ]
      },
      {
        "id": "device_online",
        "title": {
          "en": "Device online",
          "nl": "Apparaat online"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ]
      },
      {
        "id": "alarm_heard",
        "title": {
          "en": "An alarm was heard.",
          "nl": "Een alarm gehoord"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ]
      },
      {
        "id": "Tamper",
        "title": {
          "en": "Tamper Alarm Triggered",
          "nl": "Tamper beveliging afgegaan"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ]
      },
      {
        "id": "any_alarm",
        "title": {
          "en": "an alarm was triggered",
          "nl": "er is een alarm"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ],
        "tokens": [
          {
            "name": "Alarm",
            "type": "string",
            "title": {
              "en": "Type of alarm",
              "nl": "Type alarm"
            },
            "example": "Alarm_heard"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "Point",
      "name": "Minut Point",
      "class": "sensor",
      "capabilities": [
        "measure_battery",
        "measure_temperature",
        "measure_humidity",
        "measure_noise",
        "measure_pressure",
        "alarm_generic",
        "HumAlarm",
        "TempAlarm",
        "LoudNoise"
      ],
      "images": {
        "large": "/drivers/Point/assets/images/large.png",
        "small": "/drivers/Point/assets/images/small.png"
      },
      "mobile": {
        "components": [
          {
            "id": "sensor",
            "capabilities": [
              "measure_temperature",
              "measure_humidity",
              "measure_noise",
              "measure_pressure",
              "measure_luminance",
              "LoudNoise",
              "HumAlarm",
              "TempAlarm"
            ],
            "options": {
              "icons": {
                "LoudNoise": "/drivers/Point/assets/icons/LoudNoise.png",
                "HumAlarm": "/drivers/Point/assets/icons/HumAlarm.png",
                "TempAlarm": "/drivers/Point/assets/icons/TempAlarm.png"
              },
              "LoudNoise": {
                "label": {
                  "true": {
                    "en": "Loud Noise Heard"
                  },
                  "false": {
                    "en": "All is quiet"
                  }
                }
              },
              "HumAlarm": {
                "label": {
                  "true": {
                    "en": "Abnormal Humidity"
                  },
                  "false": {
                    "en": "Humidity normal"
                  }
                }
              },
              "TempAlarm": {
                "label": {
                  "true": {
                    "en": "Abnormal temperature"
                  },
                  "false": {
                    "en": "Normal Temp"
                  }
                }
              }
            }
          },
          {
            "id": "battery",
            "capabilities": [
              "measure_battery"
            ]
          }
        ]
      },
      "pair": [
        {
          "id": "login_oauth2",
          "template": "login_oauth2"
        },
        {
          "id": "list_devices",
          "template": "list_devices_singular",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "PointHome",
      "name": "Point Home",
      "class": "homealarm",
      "capabilities": [
        "alarm_generic"
      ],
      "images": {
        "large": "/drivers/Point/assets/images/large.png",
        "small": "/drivers/Point/assets/images/small.png"
      },
      "pair": [
        {
          "id": "login_oauth2",
          "template": "login_oauth2"
        },
        {
          "id": "list_devices",
          "template": "list_devices_singular",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Kevin Traa",
    "email": "ketra90@gmail.com"
  }
}