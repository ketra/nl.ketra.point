  "flow": {
    "triggers": [
      {
        "id": "alarm_grace_period_expired",
        "title": {
          "en": "Motion while alarm enabled",
          "nl": "Beweging tijdens alarm"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ]
      },
      {
        "id": "alarm_heard",
        "title": {
          "en": "An alarm was heard.",
          "nl": "Een alarm gehoord"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Point"
          }
        ]
      },
      {
        "id": "any_alarm",
        "title": {
